---
import Layout from '../layouts/Layout.astro';

const stories = [
  {
    title: "The Stuffed Sentinel",
    excerpt: "A forgotten bear awakens in a corporate wasteland, its plush body hiding a cybernetic heart.",
    tag: "Corporate Espionage"
  },
  {
    title: "Glowbear Gambit",
    excerpt: "A tale of espionage amid blinking billboards and shadowy figures in the rain.",
    tag: "Urban Mystery"
  },
  {
    title: "Echoes of Eternity",
    excerpt: "When childhood memories echo through the neon-lit streets, reality begins to glitch.",
    tag: "Psychological Thriller"
  },
  {
    title: "Red Button Protocol",
    excerpt: "A security bear's malfunction triggers a cascade of cyber-terror across the city.",
    tag: "Action Thriller"
  }
];

const features = [
  {
    icon: "fas fa-bear",
    title: "Twisted Innocence",
    description: "Adorable bears hide cybernetic secrets and vengeful souls."
  },
  {
    icon: "fas fa-city",
    title: "Neon Noir Atmosphere",
    description: "Foggy alleys, holographic ads, and whispers in the dark."
  },
  {
    icon: "fas fa-question-circle",
    title: "Moral Ambiguity",
    description: "Heroes? Villains? In these shadows, lines blur like glitchy code."
  }
];
---

<Layout title="Neon Nightmare Tales" description="Explore haunting cyber-noir stories where innocent teddy bears unravel into sinister shadows under flickering neon lights. Dive into tales of betrayal, mystery, and urban dread.">
  <div class="min-h-screen bg-black text-white">
    <!-- Hero Section -->
    <section class="relative py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-[#000000] to-[#0a0a0a] z-0"></div>
      <div class="absolute inset-0 z-10">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-[#00ffff] rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
        <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-[#ff0033] rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
      </div>
      <div class="container mx-auto px-4 relative z-20">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00ffff] to-[#ff0033]">
              Neon Nightmare Tales
            </span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-300 font-light">
            Where Teddy Bears Lurk in Neon Shadows
          </p>
          <p class="text-lg max-w-2xl mx-auto text-gray-400">
            Explore haunting cyber-noir stories where innocent teddy bears unravel into sinister shadows under flickering neon lights. Dive into tales of betrayal, mystery, and urban dread.
          </p>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 bg-gradient-to-b from-black to-[#0a0a0a] relative">
      <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[#00ffff] to-transparent"></div>
        <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[#ff0033] to-transparent"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00ffff] to-[#ff0033]">
            Why These Tales Haunt
          </span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {features.map((feature, index) => (
            <div 
              class="bg-[#0a0a0a] border border-[#00ffff] rounded-xl p-6 hover:border-[#ff0033] transition-all duration-300 transform hover:scale-105"
              key={index}
            >
              <div class="flex items-center mb-4">
                <i class={`${feature.icon} text-3xl mr-4 text-[#00ffff]`}></i>
                <h3 class="text-xl font-bold">{feature.title}</h3>
              </div>
              <p class="text-gray-300">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stories Section -->
    <section class="py-16 bg-gradient-to-b from-[#0a0a0a] to-black relative">
      <div class="absolute inset-0 z-0">
        <div class="absolute top-10 left-10 w-48 h-48 bg-[#00ffff] rounded-full filter blur-3xl opacity-10"></div>
        <div class="absolute bottom-10 right-10 w-64 h-64 bg-[#ff0033] rounded-full filter blur-3xl opacity-10"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00ffff] to-[#ff0033]">
            Explore Our Tales
          </span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {stories.map((story, index) => (
            <div 
              class="group relative bg-gradient-to-br from-[#0a0a0a] to-[#111111] border border-[#00ffff] rounded-xl overflow-hidden transition-all duration-300 hover:border-[#ff0033] hover:shadow-lg hover:shadow-[#00ffff]/20"
              key={index}
            >
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-2xl font-bold group-hover:text-[#ff0033] transition-colors">
                    {story.title}
                  </h3>
                  <span class="text-xs px-2 py-1 bg-[#ff0033] text-white rounded-full">
                    {story.tag}
                  </span>
                </div>
                <p class="text-gray-300 mb-4">{story.excerpt}</p>
                <div class="flex justify-between items-center">
                  <span class="text-[#00ffff] text-sm font-semibold">
                    Read Story
                  </span>
                  <div class="w-8 h-8 rounded-full border-2 border-[#00ffff] flex items-center justify-center group-hover:border-[#ff0033] transition-colors">
                    <i class="fas fa-arrow-right text-[#00ffff] group-hover:text-[#ff0033]"></i>
                  </div>
                </div>
              </div>
              <div class="absolute inset-0 bg-gradient-to-r from-[#00ffff]/5 to-[#ff0033]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-[#000000] via-[#0a0a0a] to-[#000000] relative">
      <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10 text-center">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00ffff] to-[#ff0033]">
            Ready to Unravel the Darkness?
          </span>
        </h2>
        <p class="text-xl max-w-2xl mx-auto text-gray-300 mb-10">
          Join us in the neon-drenched streets where every teddy bear whispers a secret. 
          Subscribe to our next chapter of cyber-noir nightmares.
        </p>
        <div class="max-w-md mx-auto">
          <div class="flex">
            <input 
              type="email" 
              placeholder="Enter your cybernetic email" 
              class="flex-grow px-4 py-3 bg-[#0a0a0a] border border-[#00ffff] rounded-l-lg focus:outline-none focus:ring-2 focus:ring-[#00ffff] text-white placeholder-gray-500"
            />
            <button class="px-6 py-3 bg-[#ff0033] text-white font-bold rounded-r-lg hover:bg-[#ff3366] transition-colors">
              Subscribe
            </button>
          </div>
          <p class="mt-4 text-gray-500 text-sm">
            Stay updated with our latest terrifying tales
          </p>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-10 border-t border-[#00ffff]/20 bg-[#000000]">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-500">Â© {new Date().getFullYear()} Neon Bear Noir. All tales are fictional.</p>
        <div class="mt-4 flex justify-center space-x-6">
          <a href="#" class="text-gray-500 hover:text-[#00ffff] transition-colors">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-500 hover:text-[#00ffff] transition-colors">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="text-gray-500 hover:text-[#00ffff] transition-colors">
            <i class="fab fa-facebook"></i>
          </a>
        </div>
      </div>
    </footer>
  </div>
</Layout>