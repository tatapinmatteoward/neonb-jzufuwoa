---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-github', url: '#' },
  { icon: 'fab fa-discord', url: '#' }
];
---

<footer class="bg-gray-900 text-white py-8 border-t border-gray-800">
  <div class="container mx-auto px-4 text-center">
    <p class="text-cyan-400 font-mono text-sm mb-4">
      &copy; {currentYear} Neon Bear Noir. All rights reserved.
    </p>
    <div class="flex justify-center gap-6 mb-4">
      {socialLinks.map((link) => (
        <a 
          href={link.url} 
          class="text-gray-400 hover:text-pink-500 transition-colors duration-300"
          aria-label={`Follow us on ${link.icon.split(' ')[1].replace('fa-', '')}`}
        >
          <i class={`${link.icon} text-xl`}></i>
        </a>
      ))}
    </div>
    <div class="text-xs text-gray-500 font-mono">
      <p>CYBER-NOIR MINIMALIST DESIGN</p>
    </div>
  </div>
</footer>